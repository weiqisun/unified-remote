<?xml version="1.0" encoding="utf-8"?>
<layout>
    <row>
        <button icon="power" onTap="tv_power" color="red" />
        <button icon="refresh" onTap="refresh" />
        <button icon="docclose" onTap="quit_app" color="red" />
    </row>
    <row>
        <button icon="lock" onTap="sleep" color="orange" />
        <button icon="unlock" onTap="unlock" color="orange" />
    </row>
    <row>
        <button icon="vdown" onTap="volume_down" />
        <button icon="vmute" onTap="volume_mute" />
        <button icon="vup" onTap="volume_up" />
    </row>
    <row>
        <button text="Esc" onTap="key_esc" color="green"/>
        <button text="Chrome" onTap="open_chrome" />
        <button text="Safari" onTap="open_safari" color="green" />
    </row>
    <row>
        <button icon="rwd" onTap="fast_backward" />
        <button icon="playpause" onTap="play_pause" color="green"/>
        <button icon="ff" onTap="fast_forward" />
    </row>
</layout>
