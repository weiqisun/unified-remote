<?xml version="1.0" encoding="utf-8"?>
<layout>
    <row>
        <button icon="power" onTap="tv_power" color="red" />
        <button icon="up" onTap="page_up" />
        <button icon="down" onTap="page_down" />
    </row>
    <row>
        <button icon="vdown" onTap="volume_down" />
        <button icon="vmute" onTap="volume_mute" />
        <button icon="vup" onTap="volume_up" />
    </row>
    <row>
        <button text="ESC" onTap="key_esc" />
        <button icon="refresh" onTap="refresh" />
        <button icon="docclose" onTap="quit_app" />
    </row>
    <row>
        <button icon="rwd" onTap="fast_backward" />
        <button icon="playpause" onTap="play_pause" />
        <button icon="ff" onTap="fast_forward" />
    </row>
</layout>
